<ui>
    <menubar name="MainMenubar">
        <menu action="FantasdicMenu">
            <menuitem action="Search"/>
            <separator/>
            <menuitem action="Save"/>
            <separator/>
            <menuitem action="PrintSetup"/>
            <menuitem action="PrintPreview"/>
            <menuitem action="Print"/>
            <separator/>
            <menuitem action="Quit"/>
        </menu>
        <menu action="EditMenu">
            <menuitem action="ScanClipboard"/>
            <separator/>
            <menuitem action="Copy"/>
            <menuitem action="SelectAll"/>
            <separator/>
            <menuitem action="Find"/>
            <menuitem action="FindNext"/>
            <menuitem action="FindPrevious"/>
            <separator/>
            <menuitem action="Preferences"/>
        </menu>
        <menu action="ViewMenu">
            <menu action="TextSizeMenu">
                <menuitem action="ZoomPlus"/>
                <menuitem action="ZoomMinus"/>
                <menuitem action="ZoomNormal"/>
            </menu>
            <separator/>
            <menuitem action="History"/>
            <menuitem action="Statusbar"/>
            <menuitem action="Toolbar"/>
        </menu>
        <menu action="GoMenu">
            <menuitem action="GoBack"/>
            <menuitem action="GoForward"/>
        </menu>
        <menu action="HelpMenu">
            <menuitem action="About"/>
        </menu>
    </menubar>
    
    <accelerator name="SlashAccel" action="Slash"/>
    <accelerator name="EscapeAccel" action="Escape"/>    
    <accelerator name="F3Accel" action="F3"/>
    <accelerator name="ShiftF3Accel" action="ShiftF3"/>
    <accelerator name="CtrlEqualAccel" action="CtrlEqual"/>
</ui>
