<sect2 id="fantasdic-preferences-proxy">
    <title>Proxy</title>
    
    <figure id="fantasdic-preferences-proxy-fig">
        <title>Proxy tab</title>
        <screenshot>
            <mediaobject>
                <imageobject>
                    <imagedata
                              
